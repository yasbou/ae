{% extends 'base.html.twig' %}

{% block body %}
 {{ parent() }}
 <p id="redir">ACCUEIL>{{ city.name }}</p>

<div class="list">
<!--liste des prestataires du service sÃ©lectionner!-->
{% for c in city.users %}

<div class="jumbotron">
<h4 id="user_service">{{c.service}}</h4>
 <h2 class="display-3">{{c.compagnyName}}</h2>
 <img src="{{asset('uploads/'~ c.logo)}}" alt="">
